{
    "include": ["src/**/*"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "removeComments": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true
    }
}
